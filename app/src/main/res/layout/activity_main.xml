<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="io.github.droidknights.droidknightsgoods.view.main.MainActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_open_source_license"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"
        android:src="@drawable/setting"
        android:padding="10dp"
        android:alpha="0.6"
        app:layout_anchor="@+id/img_logo"
        app:layout_anchorGravity="top|right" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_logo_text"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/droidknights_text"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Message"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/content_result_include"
        layout="@layout/content_result"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>
