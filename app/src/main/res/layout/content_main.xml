<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_logo_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/droidknights_text" />

        <TextView
            android:id="@+id/tv_sponsors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:text="후원"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_sponsors_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="1개"
                android:textColor="@color/textColor"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@id/tv_count"
                android:gravity="right"
                android:text="LG G Watch Style"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_gifts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_sponsors_info"
            android:layout_below="@id/img_logo_text"
            android:layout_margin="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/lg_watch" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_result_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000"
        android:padding="20dp"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>
